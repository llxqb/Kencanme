<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shushan.kencanme">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 允许程序设置内置sd卡的读写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许程序获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 允许程序访问WiFi网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序读写手机状态和身份 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--
    允许程序访问CellID或WiFi热点来获取粗略的位置
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"
    这个权限会导致部分手机一直提示开启定位权限/>
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".KencanmeApp"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--此部分代码需要移植到您的 app 下的 manifest，并且 authorities 指定您的包名。例如：com.android.FileProvider -->
        <!--否则使用拍照功能时，会崩溃 -->
        <provider
            android:name=".help.MyProvider"
            android:authorities="com.shushan.kencanme.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/rc_file_path" />
        </provider>


        <activity android:name=".mvp.ui.activity.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mvp.ui.activity.login.LoginActivity"></activity>
        <activity android:name=".mvp.ui.activity.recommendUserInfo.RecommendUserInfoActivity" />
        <activity android:name=".mvp.ui.activity.reportUser.ReportUserActivity" />
        <activity android:name=".mvp.ui.activity.reportUser.DataFraudActivity" />
        <activity android:name=".mvp.ui.activity.personInfo.CreatePersonalInfoActivity"></activity>
        <activity android:name=".mvp.ui.activity.personInfo.PersonalInfoUploadPhotoActivity"></activity>
        <activity android:name=".mvp.ui.activity.register.AgreementActivity" />
        <activity android:name=".mvp.ui.activity.vip.OpenVipActivity" />
        <activity android:name=".mvp.ui.activity.pay.RechargeActivity" />
        <activity android:name=".mvp.ui.activity.personInfo.EditMakeFriendsInfoActivity" />
        <activity android:name=".mvp.ui.activity.personInfo.EditPersonalInfoActivity" />
        <activity
            android:name=".mvp.ui.activity.personInfo.EditLabelActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".mvp.ui.activity.personInfo.EditContactWayActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity android:name=".mvp.ui.activity.setting.SettingActivity" />
        <activity android:name=".mvp.ui.activity.setting.MessageReminderActivity" />
        <activity android:name=".mvp.ui.activity.setting.ClearCacheActivity" />
        <activity
            android:name=".mvp.ui.activity.setting.FeedbackProblemActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity android:name=".mvp.ui.activity.setting.AboutUsActivity" />
        <activity android:name=".mvp.ui.activity.photo.MyAlbumActivity" />
        <activity
            android:name=".mvp.ui.activity.photo.UploadPhotoActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />



        <activity
            android:name=".mvp.ui.activity.rongCloud.ConversationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="com.shushan.kencanme"
                    android:pathPrefix="/conversation/"
                    android:scheme="rong" />
            </intent-filter>
        </activity>
        <activity android:name=".mvp.ui.activity.photo.LookPhotoActivity"></activity>
    </application>

</manifest>