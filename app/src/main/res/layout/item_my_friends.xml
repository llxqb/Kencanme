<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/my_friends_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_5">

        <com.shushan.kencanme.mvp.views.CircleImageView
            android:id="@+id/friends_avator_iv"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/friends_nick_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_toEndOf="@id/friends_avator_iv"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/friends_year_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_toEndOf="@id/friends_nick_tv"
            android:background="@mipmap/home_gender_female"
            android:paddingStart="@dimen/dp_18"
            android:paddingEnd="@dimen/dp_2"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

    </RelativeLayout>

    <View style="@style/line_height_1" />

</LinearLayout>
