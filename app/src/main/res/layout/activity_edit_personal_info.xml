<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.personInfo.EditPersonalInfoActivity">

    <include layout="@layout/common_toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dp_22"
        android:paddingStart="@dimen/dp_22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_4"
            android:drawableStart="@mipmap/details_page_address"
            android:text="@string/EditPersonalInfoActivity_Address"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/edit_city_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@null"
            android:gravity="end"
            android:hint="@string/EditPersonalInfoActivity_address_hint"
            android:textColor="@color/color_6941ff"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View style="@style/line_height_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingEnd="@dimen/dp_22"
        android:paddingStart="@dimen/dp_22">

        <TextView
            android:id="@+id/height_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/EditPersonalInfoActivity_Height"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/edit_height_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@id/height_tv"
            android:layout_toStartOf="@id/height_cm_tv"
            android:background="@null"
            android:inputType="number"
            android:gravity="end"
            android:hint="@string/EditPersonalInfoActivity_Height_hint"
            android:textColor="@color/color_6941ff"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/height_cm_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_4"
            android:text="cm"
            android:textColor="@color/color_6941ff"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <View style="@style/line_height_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingEnd="@dimen/dp_22"
        android:paddingStart="@dimen/dp_22">

        <TextView
            android:id="@+id/weight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/EditPersonalInfoActivity_Weight"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/edit_weight_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@id/weight_tv"
            android:layout_toStartOf="@id/weight_kg_tv"
            android:background="@null"
            android:inputType="number"
            android:gravity="end"
            android:hint="@string/EditPersonalInfoActivity_Weight_hint"
            android:textColor="@color/color_6941ff"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/weight_kg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_4"
            android:text="kg"
            android:textColor="@color/color_6941ff"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <View style="@style/line_height_1" />

    <!-- 三围-->
    <LinearLayout
        android:id="@+id/chest_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dp_22"
        android:paddingStart="@dimen/dp_22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/EditPersonalInfoActivity_Chest"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/edit_chest_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@null"
            android:gravity="end"
            android:hint="@string/EditPersonalInfoActivity_Chest_hint"
            android:textColor="@color/color_6941ff"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View style="@style/line_height_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dp_22"
        android:paddingStart="@dimen/dp_22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/EditPersonalInfoActivity_Birthday"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/edit_birthday_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@null"
            android:gravity="end"
            android:hint="@string/EditPersonalInfoActivity_Birthday_hint"
            android:textColor="@color/color_6941ff"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View style="@style/line_height_1" />

    <!-- 职业-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dp_22"
        android:paddingStart="@dimen/dp_22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/EditPersonalInfoActivity_Occupation"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/edit_occupation_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@null"
            android:gravity="end"
            android:hint="@string/EditPersonalInfoActivity_Occupation_hint"
            android:textColor="@color/color_6941ff"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View style="@style/line_height_1" />


    <!--保存 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal">

        <Button
            android:id="@+id/save_btn"
            android:layout_width="@dimen/dp_228"
            android:layout_height="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/bg_blue2_round_20_selector"
            android:text="@string/Preserve"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>