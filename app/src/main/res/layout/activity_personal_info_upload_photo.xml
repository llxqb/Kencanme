<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.Person_info.PersonalInfoUploadPhotoActivity">

    <include layout="@layout/common_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/photo_iv_rl"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_345"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:src="@mipmap/upload_photos" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_22"
                android:layout_marginStart="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_horizontal"
                android:text="Please upload vivid photos or videos with clear facial features
to get a match."
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/sp_11" />

            <View
                style="@style/line_height_1"
                android:layout_marginTop="@dimen/dp_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_20"
                android:text="Declaration"
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_90"
                android:layout_marginEnd="@dimen/dp_22"
                android:layout_marginStart="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_12">

                <EditText
                    android:id="@+id/upload_photo_content_ev"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/world_limit_text"
                    android:background="@drawable/bg_gray2_round_5"
                    android:gravity="start|top"
                    android:hint="Please enter a statement about making friends."
                    android:padding="@dimen/dp_10"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/upload_photo_world_limit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:maxLength="100"
                    android:padding="@dimen/dp_2"
                    android:text="0/80"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_25"
                android:gravity="bottom|center_horizontal">

                <Button
                    android:id="@+id/complete_btn"
                    android:layout_width="@dimen/dp_228"
                    android:layout_height="@dimen/dp_35"
                    android:background="@drawable/bg_blue2_round_20_selector"
                    android:text="Preserve"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>