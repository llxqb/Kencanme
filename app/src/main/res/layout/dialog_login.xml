<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000">


    <LinearLayout
        android:id="@+id/pop_contain"
        android:layout_width="@dimen/dp_285"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_30"
        android:background="@drawable/bg_white_round_5"
        android:gravity="center_horizontal"
        android:minHeight="@dimen/dp_377"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/app_name"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:gravity="center"
            android:text="@string/LoginDialog_count_hint"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_14" />


        <RelativeLayout
            android:id="@+id/login_app_rl"
            android:layout_width="@dimen/dp_215"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_22"
            android:background="@drawable/bg_login_round_30_selector">

            <ImageView
                android:id="@+id/account_avator_iv"
                android:layout_width="@dimen/dp_43"
                android:layout_height="@dimen/dp_43"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_5"
                android:src="@mipmap/person_head_icon" />

            <TextView
                android:id="@+id/account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_toEndOf="@id/account_avator_iv"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_name"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@id/account_avator_iv"
                android:layout_marginBottom="@dimen/dp_6"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_other_account_rl"
            android:layout_width="@dimen/dp_215"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/bg_login_round_30_selector">

            <ImageView
                android:id="@+id/other_account_iv"
                android:layout_width="@dimen/dp_43"
                android:layout_height="@dimen/dp_43"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_5"
                android:src="@mipmap/person_head_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@id/other_account_iv"
                android:text="@string/LoginDialog_other_accounts"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_26"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center"
            android:text="@string/LoginDialog_agreement"
            android:textColor="@color/color_80"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

</RelativeLayout>