<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.rongCloud.SystemMsgInfoActivity">

    <include layout="@layout/common_toolbar" />

    <TextView
        android:id="@+id/system_msg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_32"
        android:textColor="@color/color_6941ff"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/system_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingStart="@dimen/dp_32"
        android:paddingEnd="@dimen/dp_32"
        android:textColor="@color/color_80"
        android:textSize="@dimen/sp_16" />
</LinearLayout>