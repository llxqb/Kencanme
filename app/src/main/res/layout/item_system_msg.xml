<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_18"
    android:paddingStart="@dimen/dp_18"
    android:paddingTop="@dimen/dp_10">

    <ImageView
        android:id="@+id/msg_hint_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:src="@mipmap/system_message_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_toEndOf="@id/msg_hint_iv"
        android:background="@drawable/bg_white_round_5"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/system_msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New users are the first privilege! Let's
wait for something."
            android:textColor="@color/color_6941ff"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/system_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="Here is the textï¼Œnew users are the first
privilege! Let's wait for something."
            android:textColor="@color/color_80"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>

</RelativeLayout>
