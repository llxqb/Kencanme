<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_match_success_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000">


    <ImageView
        android:id="@+id/match_success_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/matching_success" />

    <TextView
        android:id="@+id/match_success_chat_tv"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/match_success_iv"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_m_25"
        android:background="@drawable/match_success_tv_bg"
        android:gravity="center"
        android:text="@string/LoveMeFriendsAdapter_match_success"
        android:textColor="#C84769"
        android:textSize="@dimen/sp_20" />
</RelativeLayout>