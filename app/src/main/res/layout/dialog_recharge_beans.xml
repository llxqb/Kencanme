<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recharge_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000">


    <LinearLayout
        android:id="@+id/dialog_contain_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/bg_white_round_5"
        android:gravity="center_horizontal"
        android:minHeight="@dimen/dp_200"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_20">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/message_photo_recharge" />

        <TextView
            android:id="@+id/dialog_recharge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:text="@string/RechargeBeansDialog_no_beans_hint"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_16" />


        <Button
            android:id="@+id/btn_earn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/dialog_style_2_blue"
            android:text="@string/earn_beans"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/btn_recharge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/yellow_btn"
            android:text="@string/recharge"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/pop_contain"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginEnd="@dimen/dp_30"
        android:padding="@dimen/dp_15"
        android:src="@mipmap/popup_close" />
</RelativeLayout>