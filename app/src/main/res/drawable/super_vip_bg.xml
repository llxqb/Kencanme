<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 普通状态 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#EDD189" android:startColor="#E5C16B" android:type="linear" />
            <corners android:radius="@dimen/dp_4" />
        </shape>
    </item>
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#80EDD189" android:startColor="#80E5C16B" android:type="linear" />
            <corners android:radius="@dimen/dp_4" />
        </shape>
    </item>
    <!-- 禁用状态 -->
</selector>